#streams_wrapper
  
  
  
  +outer-container
  height: 500px
  padding-top: 25px
  
  #streams_container
  
    height: 155px
    
    +span-columns(9)
    
    #streams_bin
      width: 808px
      height: 150px
        
      #ovid1, #ovid2, #ovid3, #ovid4, #ovid5
        display: inline-block
        width: 155px
        height: 150px
        padding: 0
        margin: 0 auto
        
        
        
        
        
        #ivid1, #ivid2, #ivid3, #ivid4, #ivid5
          width: 155px
          height: 150px
          
          background: fade-out(#DCFCDF, 0.1)
          background-image: url(<%= asset_path "man.png" %>)
          background-repeat: no-repeat
          background-position: center center
          background-size: cover
          border: 1px solid
          position: relative
          overflow: hidden
          &:hover 
            .connectdown
              +position(absolute, 0 0 0 0)
          &:hover .overlay
            +position (absolute, 80% 0px null 0px)
            background: fade-out(#1A1F1D, 0.2) 
            color: white
            font-weight: 700
            text-align: center
            line-height: 30px
            cursor: pointer
            
            
          .connectup
            margin: 0 auto
            +position(absolute, 0 0 0 0)
            background: fade-out(green, 0.6)
            cursor: pointer
          
            
            text-align: center
            line-height: 250px
            color: black
            weight: 700
              
            strong
              display: block
          
          
          .connectdown
            margin: 0 auto
            +position(absolute, 100% 0 0 0)
            background: fade-out(green, 0.6)
            cursor: pointer
            
            
            text-align: center
            line-height: 250px
            color: black
            weight: 700
              
            strong
              display: block
              
          .connectNONE
            font-size: 0
          
          .overlay
            
            +position (absolute, 100% 0px null 0px)
            height: 100%
            background: fade-out(#1A1F1D, 0.2) 
            color: white
            font-weight: 700
            text-align: center
            line-height: 30px
            z-index: 10
            +transition-duration(0.5s)
            +transition-timing-function(ease-in)
            
          .overlayno
            font-size: 0
          
  #chat_window
    width: 100%
    height: 300px
    background: pink
    margin-top: 15px 
    margin-bottom: 50px
    display: block
    position: relative
    
    #text_area
      
      width: 100%
      height: 200px
      border: 1px solid
      bottom: 10px
      left: 0px
      +position(absolute, 0 0 null 0)
    #msg
      width: 80%
      +position(absolute, null null 0 0)
      bottom: 0
      left: 0
    #sendit
      width: 20% 
      +position(absolute, null 0 0 null)
      
      button
        +fill-parent
    
  #chats_aside
    +span-columns(3)
    background: gray
    border: 3px solid
    overflow: hidden
    word-wrap: break-word

  



  
.join_text
  font-size: .9em