#streams_wrapper
  
  
  
  +outer-container
  height: 500px
  padding-top: 25px
  
  #streams_container
  
    height: 300px
    
    +span-columns(9)
    
    #streams_bin
      width: 808px
      height: 150px
        
      #ovid1, #ovid2, #ovid3, #ovid4, #ovid5
        display: inline-block
        width: 155px
        height: 150px
        padding: 0
        margin: 0 auto
        
        #ivid1, #ivid2, #ivid3, #ivid4, #ivid5
          width: 155px
          height: 150px
          
          background: fade-out(#9C4061, 0.1)
          background: url("man.png")
          background-repeat: no-repeat
          background-position: center center
          background-size: cover
          border: 1px solid
          position: relative
          overflow: hidden
          &:hover 
            .connectdown
              +position(absolute, 0 0 0 0)
          &:hover .overlay
            +position (absolute, 80% 0px null 0px)
            background: fade-out(#1A1F1D, 0.2) 
            color: white
            font-weight: 700
            text-align: center
            line-height: 30px
            cursor: pointer
            
            
          .connectup
            margin: 0 auto
            +position(absolute, 0 0 0 0)
            background: fade-out(green, 0.6)
            cursor: pointer
          
            
            text-align: center
            line-height: 250px
            color: black
            weight: 700
              
            strong
              display: block
          
          
          .connectdown
            margin: 0 auto
            +position(absolute, 100% 0 0 0)
            background: fade-out(red, 0.6)
            cursor: pointer
            
            
            text-align: center
            line-height: 250px
            color: black
            weight: 700
              
            strong
              display: block
              
          
          
          .overlay
            
            +position (absolute, 100% 0px null 0px)
            height: 100%
            background: fade-out(#1A1F1D, 0.2) 
            color: white
            font-weight: 700
            text-align: center
            line-height: 30px
            z-index: 10
            +transition-duration(0.5s)
            +transition-timing-function(ease-in)
            
          .overlayno
            font-size: 0
          
          
      
    
  #chats_aside
    +span-columns(3)
    background: gray
    border: 3px solid
    overflow: hidden
    word-wrap: break-word





  
