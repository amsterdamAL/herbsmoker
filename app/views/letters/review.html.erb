
<div id="letter_page_wrapper">	
	
	<div id="letter1_wrapper">
		<div id="letter1">
			<%= form_for :record do |f| %>
		  		<%= f.label :from %>
		  		<%= f.text_field :from, :value => @user %>
		
		  		<%= f.label :subject %>
		  		<%= f.text_field :subject, :value => @subject %>
		  		
		  		<%= f.label :body %>
		  		<%= f.text_area :body, :value => @body %>
		  		
		  		<!-- <%= f.submit %> -->
			<% end %>
		</div>
	</div>
	
	<div id="letter_info_wrapper">
		<div id="letter_info">
	 		
	 		<h5>Recipients</h5>
	 		
	 		<ul>
	 			<li><%= @name %></li>
	 			<li><%= @name2 %></li>
	 		</ul>
	 		
	 		<div id="letter_inst">
		 		<p>
		 			Please review the letter and make any changes you wish. 
		 			Sign the form and hit send. Thanks
		 			
		 	 
		 			
		 		</p>
	 		</div>
	 		
	 		
		</div>
		<div id="letter_form">
		
		
		<input type="text" placeholder="Sign your name here." id="letter_name" />
		<input type="text" placeholder="Address" id="letter_address" />
		<div id="lettersht">
			<input type="text" placeholder="City" id="letter_city" />
			<input type="text" placeholder="Zip" id="letter_zip" />
		</div>
		<input type="submit" value="Send" id="letter_button" />
		
		
		
		
		
		
	</div>
	
		
		
		
	</div>

</div>
