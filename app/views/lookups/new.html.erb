<div class="lookup_wrapper">	
	
	
	
	<div id="lookup_form" >
		<div id="lookup_form_inner">
		
			<div id="lookup_stepone"><strong>Step 1:</strong> &nbsp&nbsp&nbsp Enter address.</div>
			<div><input type="text" placeholder="Address (optional)" id="lookup_address" /></div>
			<div id="smoosh">
				<input type="text" placeholder="City (optional)" id="lookup_city" />
				<input type="text" placeholder="Zip (optional)" id="lookup_zip" />
				
			</div>
			<input type="submit" value="Find" id="lookup_button" />
			<pre id="lookup_errors">
			</pre>
				<div id="progressbar">
					<div class="progress-bar">
		  			<span class="meter" style="width: 10%"></span>
				</div>
		</div>
	</div>
		
		
	</div>

	<div id="arrow">
		 <!-- render :partial => 'shared/sign_left' -->
		 <div id="why">
		 	<div id="why_header">
		 		<h1>Email your Florida Legislators for free.</h1>
		 	</div>
		 	<div id="why_body">
		 		<ol>
		 			<li>
		 				<p>
		 					Enter your address to find out who represents you.
		 				</p>
		 			</li>
		 			<li>
		 				<p>
		 					Send your representative our default letter regarding marijuana legalization. Or better yet, we'll send them a hand written letter for you.
		 				</p>

		 			</li>
		 			<li>
		 				<p>
		 					Enter an Address to to find out who represents you! and letum have it!
		 				</p>
		 			</li>
		 		</ol>
		 	</div>


		 </div>
	</div>
	
	
	<div id="results_wrap">	
		
		<div id="lookup_steptwo"><strong>Step 2:</strong> &nbsp&nbsp Your Florida representatives.</div>
		<div id="lookup_wrap">
		
			<div id="lookup_results">
				<div id="results_img"><%= image_tag("man2.png", :id => "headshot", :alt => "picture placeholder") %></div>
				<div id="results_name"> </div>
				<div id="results_party"> </div>
				<div id="results_email"> </div>
				
				
				<div id="results_chamber"> </div>
				<div id="results_district"> </div>
				
					
			</div>		
			
			<div id="lookup_results2">
				<div id="results_img2"><%= image_tag("man2.png", :id => "headshot2", :alt => "picture placeholder") %></div>
				<div id="results_name2"> </div>
				<div id="results_party2"> </div>
				<div id="results_email2"> </div>
				
				<div id="results_chamber2"> </div>
				<div id="results_district2"> </div>
			</div>	

		

		</div>

		<div id="review_button">
			<%= form_tag("/letters/review", method: "get") do %>
				<%= hidden_field_tag 'email_to_controller' %>
				<%= hidden_field_tag 'district_1' %>
				<%= hidden_field_tag 'name_to_controller' %>
				
				<%= hidden_field_tag 'email2_to_controller' %>
				<%= hidden_field_tag 'name2_to_controller' %>
				<%= hidden_field_tag 'district_2' %>
					
					
				
			
			<%= button_to "NEXT STEP: review & send letter ", {:action => "review", :controller => "letters"}, :method => "get", :class => "buttontwo" %>
			<% end %>
		</div>
		
	</div>




