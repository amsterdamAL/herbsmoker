<div id="main-stuff" class="featured_wrapper">
	<div class="featured_main">
		<div class="featured_content">	
			
			<% @article = Article.order("created_at").last %>
			<div class= "featured_title">
				<h1 class="title"><%= link_to @article.title, {:controller => 'articles', :action => 'show', :id => @article.id } %></h1>
			</div>
			
			<div class="featured_time_stamp_wrapper">
				<!--<div class="featured_share_buttons">
					<%= social_share_button_tag("FloridaToker.com") %>
				</div>-->
				<div class="featured_time_stamp">
				posted on
					<%= @article.created_at.strftime('%B' + ' ' + @article.created_at.day.ordinalize + ' ' + '%Y') %>
					<!-- #{article.created_at.day.ordinalize} -->
				</div>
			</div>
			
			<div class="featured_pic">
				
				<%= link_to image_tag(@article.image.url(:featured)), {:controller => 'articles', :action => 'show', :id => @article.id } %>
				
			</div>
			
			<div id="content" class="expandDiv">
				<%=raw @article.text %>
			</div>
		</div>
		
			
		<div class="the_rest">
			<% @rticles = Article.offset(1).order("created_at").reverse_order().first(5).each do |a| %>
				<li class="block">
					<div class="mini_image"><%= link_to image_tag(a.image.url(:regular)), {:controller => 'articles', :action => 'show', :id => a.id } %></div>

					<div class="mini_info_wrapper">
						<div class="mini_share_buttons">
							<%= social_share_button_tag("FloridaToker.com") %>
						</div>
						<div class="mini_info">
							<%= a.created_at.strftime('%B' + ' ' + a.created_at.day.ordinalize + ' ' + '%Y') %>
						</div>
					</div>



















					<!--<div class="mini_info_wrapper">
						<div class="mini_share_buttons">
							<%= social_share_button_tag("FloridaToker.com") %>
						</div>
						<div class="mini_info">
							<%= a.created_at.strftime('%B' + ' ' + a.created_at.day.ordinalize + ' ' + '%Y') %>
						</div>
					</div>-->
					
					<div class="mini_text"><strong><%= link_to a.title, {:controller => 'articles', :action => 'show', :id => a.id }  %></strong></div>
				</li>
			<% end %>

				<li class="block">


				<div class="mini_image"></div>
					<div class="mini_info"></div>
					<div class="mini_text"><strong></strong></div>
				</li>





		</div>
		
		
		
	</div>
	
	
	
	
	<div class="side">
		<div id="one">
			<% if !user_signed_in? %>
				<div id="register_mini">
					<%= image_tag("gggg.svg") %>
					<input type="text" placeholder="email" id="email_mini" />
					
					<input type="submit" value="Go!" id="go_mini" />
				</div>
			<% end %>
		</div>

		<div class="side_top">
			<%= image_tag("seeup.svg") %>
		</div>
		<div class="side_bottom">
			<%= image_tag("small_chat.png") %>
		</div>
	</div>

</div>	
