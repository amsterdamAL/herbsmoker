<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p>
	<%= image_tag @article.image.url(:regular) %>
</p>


<h2>Comments</h2>
<% @article.comments.each do |comment| %>

	<p>
		<strong>Commenter:</strong>
		<%= comment.commenter %>
	</p>
	<p>
		<strong>Comment:</strong>
		<%= comment.body %>
	</p>
	<p>
		<%= link_to 'distroy comment', [comment.article, comment], method: :delete, data: { confirm: 'u sure??'}%>
		
	</p>
<% end %>


<div class = "add_comment">
	<h2>Add a comment</h2>
	<%= form_for ([@article, @article.comments.build]) do |f|%>
		<p>
			<%= f.label :commenter %><br>
			<%= f.text_field :commenter %>
		</p>
		<p>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit %>
		</p>
	<% end %>
</div>
<%= link_to 'back', articles_path %>
<%= link_to 'edit', edit_article_path(@article) %>